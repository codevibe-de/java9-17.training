<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE project>

<project default="run">

	<import file="../shared/build.xml" />

	<target name="build-modA">
		<build name="x0201-modA">
		</build>
	</target>

	<target name="build-modB">
		<build name="x0201-modB">
		</build>
	</target>

	<target name="build-appl" depends="build-modA, build-modB">
		<build name="x0201-appl">
			<paths>
				<classpath location="${basedir}/build/x0201-modA.jar" />
				<classpath location="${basedir}/build/x0201-modB.jar" />
			</paths>
		</build>
	</target>

	<target name="run" depends="build-appl">
		<java classname="jj.appl.Application" fork="true">
			<classpath location="${basedir}/build/x0201-modB.jar" />
			<classpath location="${basedir}/build/x0201-modA.jar" />
			<classpath location="${basedir}/build/x0201-appl.jar" />
		</java>
	</target>

</project>
