<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="warn">

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%highlight{%d{ABSOLUTE} %-5p [%c{1}] (%-20t) %m%n}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>
